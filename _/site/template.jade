doctype html
<html$if(lang)$ lang="$lang$"$endif$>
head
  |<title>$if(title-prefix)$$title-prefix$ - $endif$$if(pagetitle)$$pagetitle$$endif$</title>
  meta(charset="utf-8")
  meta(http-equiv="x-ua-compatible" content="ie=edge")
  meta(name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1")
  |$for(author-meta)$<meta name="author" content="$author-meta$">$endfor$
  |$if(date-meta)$<meta name="dcterms.date" content="$date-meta$">$endif$
  |$if(highlighting-css)$<style type="text/css">$highlighting-css$</style>$endif$
  |$for(css)$<link rel="stylesheet" href="$css$">$endfor$
  |$if(math)$$math$$endif$
  |$for(header-includes)$$header-includes$$endfor$
  link(rel="stylesheet" href="$depth$/look.css")
  link(rel="stylesheet" href="http://django-static.u-strasbg.fr/dipstrap/latest/css/bootstrap-unistra.min.css")
  link(rel="stylesheet" href="http://django-static.u-strasbg.fr/dipstrap/latest/css/bootstrap-theme-unistra.min.css")
  link(rel="stylesheet" href="http://django-static.u-strasbg.fr/dipstrap/latest/css/main.css")
body
 div(class="navbar navbar-default navbar-fixed-top" role="navigation")
   img(class="pull-left" src="$depth$/img/unistra-white.png" alt="unistra")
   div(class="container")
     a(class="navbar-brand" href="#")
 div(class="container-fluid" style="margin-top: 3em")
   div(class="row-fluid")
     div(class="col-md-2")
       |$for(include-before)$$include-before$<hr width="100%"/>$endfor$
       |$if(toc)$<nav id="$idprefix$TOC">$toc$</nav>$endif$</div>
       div(class="row-fluid")
     div(class="col-md-10")
       |<div class="col-md-10">$if(title)$<h1>$title$</h1>$endif$$body$</div>
script(src="$depth$/behave.js")
script(src="js/vendor/modernizr-2.6.2-respond-1.1.0.min.js")
