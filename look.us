header h1
    font-family 'Orbitron', sans-serif
    border-bottom solid 1px black
    margin-bottom 1em

q
    quotes "“" "”" "‘" "’"

* 
    font-family Sans-Serif
    text-decoration none

#atomLink
    max-width  30px
    max-height 30px

body.exo div.solution pre
    background url(https://www.cs.ox.ac.uk/images/research/pl.jpg)
    background-color black
    color black
    background-size cover

body.exo div.solution pre:hover
    background white 
    transition all 1s ease

div.snippet, pre
    background #ceecf5
    color black
    font-familly monospace
    white-space pre
    padding 1em 


hr
    border solid red
    

